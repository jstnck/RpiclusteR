# -*- mode: ruby -*-
# vi: set ft=ruby :
Vagrant.configure("2") do |config|
  config.vm.define "manager-vm" do |manager-vm|
    manager-vm.vm.box = "hashicorp/bionic64"
    manager-vm.vm.network "private_network", ip: "192.168.2.100"
    manager-vm.vm.hostname = "manager-vm"
    manager-vm.ssh.forward_agent = true
    manager-vm.ssh.port = 2222    
    manager-vm.vm.synced_folder ".", "/vagrant"
    manager-vm.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
    end
    manager-vm.vm.provision "ansible" do |ansible|
      ansible.playbook = "../ansible/manager-playbook.yml"
    end
  end
end